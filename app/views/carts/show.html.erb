<article>
    <% if notice %>
    <aside id="notice"><%= notice %></aside>
    <% end %>
    <h2>Your Cart</h2>
    <table>
        <% @cart.line_items.each do |line_item| %>
        <tr>
            <td class="quantity"><%= line_item.quantity %></td>
            <td><%= line_item.product.nama %></td>
            <td class="price"><%= number_to_currency(line_item.total_price, unit: 'Rp. ') %></td>
        </tr>
        <% end %>
        <tfoot>
            <tr>
                <th colspan="2">Total:</th>
                <td class="price"><%= number_to_currency(@cart.total_price, unit: 'Rp. ') %></td>
            </tr>
        </tfoot>
    </table>
    <%= button_to 'Empty cart', @cart,
method: :delete,
data: { confirm: 'Are you sure?' } %>
</article>